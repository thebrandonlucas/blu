{
  "name": "blu",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1"
  },
  "scripts": {
    "build": "bunx elmstatic build && bunx @tailwindcss/cli -i ./_resources/styles.css -o ./_site/styles.css",
    "browsersync": "cd _site && bunx browser-sync start --server --no-ui --reload-delay 500 --reload-debounce 500 --files '_layouts/**/*, _pages/**/*, _posts/**/*, _resources/**/*'",
    "build:tw": "bunx @tailwindcss/cli -i ./_resources/styles.css -o ./_site/styles.css",
    "dev": "concurrently \"bunx elmstatic watch\" \"bun run browsersync\""
  }
}
